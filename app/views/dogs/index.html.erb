<h1>Dogs</h1>

<p><%= link_to "Create New Dog", new_dog_path %></p>
<table class="table table-condensed table-striped table-hover">
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  
</thead>
<tbody>
<% @dogs.each do |dog| %>
  <tr>
    <td>
      <%= dog.id %>
    </td>
    <td>
      <%= dog.name %>
    </td>
    <td>
      <%= link_to "View", dog_path(dog),:class => 'btn btn-default' %>
      <%= link_to "Edit", edit_dog_path(dog),:class => 'btn btn-default' %>
      <%= link_to "Delete", 
                            dog_path(dog),
                            method: :delete,
                            data: {confirm: "Do you want to delete this user?"},
                            :class =>"btn btn-danger" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
