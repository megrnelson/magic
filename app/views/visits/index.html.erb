<h1>Visits</h1>

<p><%= link_to "Add Visit", new_visit_path %></p>
<table class="table table-condensed table-striped table-hover">
<thead>
  <tr>
    <th>ID</th>
    <th>Venue</th>
    <th>Dog</th>
    <th>Started at</th>
    <th>Ended at</th>
  </tr>
  
</thead>
<tbody>
<% @visits.each do |visit| %>
  <tr>
    <td>
      <%= visit.id %>
    </td>
    <td>
      <%= visit.venue_id %>
    </td>
    <td>
      <%= visit.dog_id %>
    </td>
    <td>
      <%= visit.starts_at %>
    </td>
    <td>
      <%= visit.ends_at %>
    </td>
    <td>
      <%= link_to "View", visit_path(visit),:class => 'btn btn-default' %>
      <%= link_to "Edit", edit_visit_path(visit),:class => 'btn btn-default' %>
      <%= link_to "Delete", 
                            visit_path(visit),
                            method: :delete,
                            data: {confirm: "Do you want to delete this user?"},
                            :class =>"btn btn-danger" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>