<h1>Venues</h1>

<p><%= link_to "Create New Venue", new_venue_path %></p>
<table class="table table-condensed table-striped table-hover">
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>Actions</th>
  </tr>
  
</thead>
<tbody>
<% @venues.each do |venue| %>
  <tr>
    <td>
      <%= venue.id %>
    </td>
    <td>
      <%= venue.name %>
    </td>
    <td>
      <%= venue.city %>
    </td>
    <td>
      <%= venue.state %>
    </td>
    <td>
      <%= link_to "View", venue_path(venue),:class => 'btn btn-default' %>
      <%= link_to "Edit", edit_venue_path(venue),:class => 'btn btn-default' %>
      <%= link_to "Delete", 
                            venue_path(venue),
                            method: :delete,
                            data: {confirm: "Do you want to delete this user?"},
                            :class =>"btn btn-danger" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>