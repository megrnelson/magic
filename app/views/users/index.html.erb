<h1>Users</h1>

<p><%= link_to "Create New user", new_user_path %></p>
<table class="table table-condensed table-striped table-hover">
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  
</thead>
<tbody>
<% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>
    <td>
      <%= user.email %>
    </td>
    <td>
      <%= link_to "View", user_path(user),:class => 'btn btn-default' %>
      <%= link_to "Edit", edit_user_path(user),:class => 'btn btn-default' %>
      <%= link_to "Delete", 
                            user_path(user),
                            method: :delete,
                            data: {confirm: "Do you want to delete this user?"},
                            :class =>"btn btn-danger" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
